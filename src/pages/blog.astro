---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
type BlogEntry = CollectionEntry<"blog">;

/**
 * Load all posts from the "blog" collection.
 * Filter out drafts and sort by date (newest first).
 */
const posts: BlogEntry[] = (await getCollection("blog", (entry: BlogEntry) => !entry.data.draft))
   .sort((a: BlogEntry, b: BlogEntry) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
---

<Layout title="Blog — Loïc Marigny" description="Articles and notes.">
  <h1>Blog</h1>

  {posts.length === 0 ? (
    <p>No posts yet. Create one in <code>src/content/blog/</code>.</p>
  ) : (
    <ul>
      {posts.map((post: BlogEntry) => (
        <li>
          <a href={`/blog/${post.slug}`}>{post.data.title}</a>
          <small> — {post.data.pubDate.toLocaleDateString("fr-FR")}</small>
          {post.data.description && <div>{post.data.description}</div>}
        </li>
      ))}
    </ul>
  )}
</Layout>
